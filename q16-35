//Q16
#include<iostream>
using namespace std;

	bool opposite (int a,int b)
	{
	 return a^b<0;	
	}
	
int main()
{
	int a,b;
	cin>>a>>b;
	if (opposite (a,b))
	
	cout<<"yes";
	else 
	cout<<"no";	
}

